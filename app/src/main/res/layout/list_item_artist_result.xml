<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/results_list_item_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_item_artist_image_imageview"
        android:layout_width="@dimen/results_image_size"
        android:layout_height="@dimen/results_image_size"
        android:layout_marginLeft="@dimen/results_image_left_margin"
        tools:src="@drawable/cat_placeholder_artist" />

    <TextView
        android:id="@+id/list_item_artist_name_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/results_text_left_margin"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        tools:text="@string/tools_text_results_artist_name" />

</LinearLayout>
